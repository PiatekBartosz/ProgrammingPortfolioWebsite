{
    "name": "Rust",
    "dockerFile": "../Dockerfile",
    "context": "./..",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "bash",
                        "icon": "terminal-bash"
                    },
                    "zsh": {
                        "path": "zsh"
                    }
            },
            "extensions": [
                "rust-lang.rust-analyzer",
                "matklad.rust-analyzer",
                "ms-vscode.cmake-tools",
                "bradlc.vscode-tailwindcss"
            ]
        }
    },
    "remoteUser": "dev"
}